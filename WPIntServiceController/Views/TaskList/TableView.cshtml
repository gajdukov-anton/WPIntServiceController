@using WPIntServiceController.Models;
@model GetInfoResponse
<table class="table">
    <thead>
        <tr>
            <th>Имя планировщика</th>
            <th>Срок сдачи</th>
            <th>Название задачи</th>
            <th>Дата взятия задачи</th>
            <th>Статус</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.TasksInfos)
        {
            bool wasDisplayed = false;
            foreach (var taskInfo in task.TaskInfos)
            {
                <tr>
                    @if (!wasDisplayed)
                    {
                        <td rowspan="@task.TaskInfos.Count">@task.Name</td>
                        <td rowspan="@task.TaskInfos.Count">@task.NearTaskScheduledTime</td>
                        wasDisplayed = true;
                    }
                    <td>@taskInfo.Name</td>
                    <td>@taskInfo.ScheduledTimeFormatted</td>
                    <td>@taskInfo.IsPaused</td>
                    <td>
                        @if (!taskInfo.IsPaused)
                        {
                            using (Html.BeginForm("Pause", "TaskList"))
                            {
                                <button class="btn btn-primary btn-action" name="taskName" value=@task.Name>Приостановить</button>
                            }
                        }
                        else
                        {
                            using (Html.BeginForm("Resume", "TaskList"))
                            {
                                <button class="btn btn-primary btn-action" name="taskName" value=@task.Name>Возобновить</button>
                            }
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
