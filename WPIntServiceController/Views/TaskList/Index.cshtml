@using WPIntServiceController.Models;
@model GetInfoResponse
@{
    ViewBag.Title = "Index";
}

<div>
    <h2>Список задач</h2>
    <div class="functional-buttom">
        @using (Ajax.BeginForm("SortTaskList", new AjaxOptions { UpdateTargetId = "table" }))
        {
            <div class="dropdown">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    Режимы сортировки
                    <span class="caret"></span>
                </button>
                <div class="dropdown-menu">
                    <div class="dropdown-item">
                        <input class="btn btn-primary" type="submit" name="typeSort" id="sort" value="byName" />
                    </div>
                    <div class="dropdown-item">
                        <input class="btn btn-primary" type="submit" name="typeSort" id="sort" value="byTime" />
                    </div>

                </div>

            </div>
        }
    </div>

    @using (Ajax.BeginForm("FilterByTaskName", new AjaxOptions { UpdateTargetId = "table" }))
    {
        <input type="text" name="schedulerName" />
        <button class="btn btn-primary">Фильтровать</button>
    }

    <div id="table">
        @Html.Partial("TableView", Model)
    </div>

</div>


